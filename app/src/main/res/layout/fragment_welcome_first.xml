<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".starterfragment.WelcomeFirst">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="20dp"
        android:background="@drawable/welcomefirstimg"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:paddingTop="20dp"
        android:layout_height="match_parent">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            android:fontFamily="@font/lora"
            android:gravity="center"
            android:text="Ignite Your"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="29dp"
            android:textStyle="bold"
            android:fontFamily="@font/lora"
            android:textColor="@color/black"
            android:text="Workout Journey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:paddingTop="20dp"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="19dp"
                android:fontFamily="@font/puritan"
                android:textColor="@color/black"
                android:text="@string/embark_on_a_journey_to_a_healthier_stronger_you_explore_personalized_workouts_exciting_challenges_and_a_community_of_fitness_enthusiasts_cheering_you_on"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="15dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/Startbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/btn_round"
                    android:fontFamily="@font/lora"
                    android:textStyle="bold"
                    android:paddingRight="27dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:paddingLeft="27dp"
                    android:textSize="15sp"
                    android:text="Start Journey"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</LinearLayout>